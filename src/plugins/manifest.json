{
	"manifest_version": 2,
	"name": "meer-wallt",
	"description": "基于vue3.x版本的chrome插件",
	"version": "1.0.0",
	"default_locale": "en",
	"browser_action": {
		"default_title": "meer-wallt",
		"default_icon": "assets/images/icon48.png",
		"default_popup": "popup.html"
	},
	"permissions": [
	  "<all_urls>",
	  "*://*/*",
	  "storage",
	  "activeTab",
	  "contextMenus",
	  "tabs",
	  "webRequest",
	  "webRequestBlocing", 
	  "windows",
	  "notifications"
	],
	"background": {
		"page":"./background.html"
	},
	"icons": {
		"16": "assets/images/icon16.png",
		"48": "assets/images/icon48.png",
		"128": "assets/images/icon128.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["css/content.css"],
			"js": ["js/chunk-vendors.js", "js/content.js", "js/inject.js"]
		}
	],
	"web_accessible_resources": ["injected/*"]
}